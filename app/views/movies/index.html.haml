-#  This file is app/views/movies/index.html.haml
%h1 All Movies

= form_tag movies_path, :method => :get, id: "ratings_form" do
  Include:
  - @all_ratings.each do |rating|
    = rating
    = check_box_tag "ratings[#{rating}]", 1, true
  = submit_tag 'Refresh', id: "ratings_submit"

%table#movies
  %thead
    %tr
      -# conditionally set the class if the user clicks the header
      %th{class: ("hilite" if @title == "Movie Title")}
        = link_to "Movie Title", movies_path(title: "Movie Title"), id: "title_header"
      %th
        = link_to "Rating", "#"
      -# conditionally set the class if the user clicks the header
      %th{class: ("hilite" if @title == "Release Date")}
        = link_to "Release Date", movies_path(title: "Release Date"), id: "release_date_header"
      %th
        = link_to "More Info", "#"
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
